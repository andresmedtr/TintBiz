---
import Navbar from "../components/Navbar/Navbar.astro";
import "../styles/global.css";


const {title = "Miami Tint"} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="author"
      content="Rodrigo Celis gh:<Congrak>, Andres Medina gh:<andresmdtr>" />
    <meta name="generator" content="{Astro.generator}" />
    <script
      type="module"
      src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
    <title>{title}</title>
  </head>
  <body>
    <Navbar/>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    color: black;
    background: white;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
