<label class="flex items-center gap-3">

    <div class="relative">
      <!-- Hidden checkbox to control toggle -->
      <input
        type="checkbox"
        id="model-toggle"
        class="sr-only peer"
      />
      <!-- Toggle background -->
      <div
        class="w-16 h-9 bg-blue-400 peer-checked:bg-red-500 rounded-full transition-colors duration-300"
      ></div>
      <!-- Moving dot with icon -->
      <div
        id="toggle-dot"
        class="absolute top-0.5 left-0.5 w-8 h-8 bg-white rounded-full shadow-md
               flex items-center justify-center text-sm text-blue-500
               transition-transform duration-300 transform
               peer-checked:translate-x-7"
      >
      <div class="relative w-full h-full flex items-center justify-center">
        <svg
        id="icon-house"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 text-blue-600"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        >
        <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8" />
        <path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
      </svg>

      <!-- Car icon (hidden by default) -->
      <svg
        id="icon-car"
        xmlns="http://www.w3.org/2000/svg"
        class="w-5 h-5 text-red-600 hidden"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2" />
        <circle cx="7" cy="17" r="2" />
        <path d="M9 17h6" />
        <circle cx="17" cy="17" r="2" />
      </svg>
      </div>
    </div>
    </div>
    <script type="module">
      window.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("model-toggle");
        const carIcon = document.getElementById("icon-car");
        const houseIcon = document.getElementById("icon-house");
  
        const updateIcons = (checked) => {
        houseIcon.classList.toggle("hidden", checked);
        carIcon.classList.toggle("hidden", !checked);
      };
  
        toggle.addEventListener("change", () => {
          const value = toggle.checked ? "house" : "car";
          updateIcons(toggle.checked);
  
          const event = new CustomEvent("model-change", { detail: value });
          window.dispatchEvent(event);
        });
  
        updateIcons(toggle.checked);
      });
    </script>
  </label>